typedef struct{
  int index;
  int weight;
} Info;

const int INF = -1;
const int T = 6;
const int P = 3;
const int PRE = 1;
const int POST = 1;

const Info B[T][PRE] = {
{{-1,0}}, //t0
{{0,1}},  //t1
{{-1,0}}, //t2
{{1,1}},  //t3
{{-1,0}}, //t4
{{2,1}}   //t5 
};

const Info F[T][POST]= {
{{0,1}},  //t0 
{{-1,0}}, //t1
{{1,1}},  //t2
{{-1,0}}, //t3 
{{2,1}},  //t4 
{{-1,0}}  //t5 
};

const int I[T][2] = {
{5,5},   //t0
{1,2},   //t1
{10,10}, //t2 {10,-1}
{2,3},   //t3
{15,15}, //t4
{2,3}    //t5
};

int M[P]={ 1,1,1 };

const int CPU=1;
const int TASK=3;
const int TT=1;

typedef int[0,TASK-1] task_t;
typedef int[0,CPU-1] cpu_t;
typedef int[0,T-1] tid;

typedef struct{
  int[0,T] index;
  int[0,3] prior;
} P_Info;

typedef struct{
  int[0,T] index;
  int[0,1] ready;
} R_Info;

//fps
const P_Info fixed_priority[CPU][TASK][TT]={
 { 
  { {1,3} },
  { {3,2} },
  { {5,1} }
 }
};

R_Info request[CPU][TASK][TT]={
 { 
  { {1,0} },
  { {3,0} },
  { {5,0} }
 }
};

chan dispatch[T];
broadcast chan preempt[CPU];

clock time[TASK];
clock x[TASK];

const cpu_t cpu0=0;
const task_t task0=0;
const task_t task1=1;
const task_t task2=2;

bool enabled( const tid ID ){
  int p;
  for( p=0; p&lt;PRE &amp;&amp; B[ID][p].index!=-1 ; ++p )
    if( B[ID][p].weight&gt;0 &amp;&amp; M[B[ID][p].index]&lt;B[ID][p].weight ||
        B[ID][p].weight==0 &amp;&amp; M[B[ID][p].index]&gt;0 )
      return false;
  return true;
}//enabled

void withdraw( const tid ID ){
  int p;
  for( p=0; p&lt;PRE &amp;&amp; B[ID][p].index!=-1; ++p ){
    M[B[ID][p].index]-=B[ID][p].weight;
  }
}//withdraw

void deposit( const tid ID ){
  int p;
  for( p=0; p&lt;POST &amp;&amp; F[ID][p].index!=-1; ++p ){
    M[F[ID][p].index]+=F[ID][p].weight;
  }
}//deposit
