const int RESPONSABILI = 1;
const int STUDENTI = 5;
const int PROC = RESPONSABILI + STUDENTI;
const int MAX = 3;

typedef int[0,PROC-1] pid;
typedef int[0,RESPONSABILI-1] rid;
typedef int[RESPONSABILI,PROC-1] sid;

int stud_dentro = 0;
bool resp_dentro = false;

chan ingressoStudente[pid];
chan uscitaStudente[pid];
chan ingressoResponsabile[pid];
chan uscitaResponsabile[pid];
chan ok[pid];

/*
    Variabili JMonitor
*/
const int NONE = -1;
const int MONITOR = 1;
typedef int[0,MONITOR-1] mid;

const int m = 0;

urgent chan synch[mid][pid];
urgent chan endsynch[mid][pid];
urgent chan wait[mid][pid];
urgent broadcast chan notifyAll[mid][pid];

const int[1,PROC]qs = PROC;


typedef struct{
    pid q[qs];
    int[0,qs-1] in,out;
    bool op;
}queue;


queue arrival; //arrival order

void enq(queue &amp;q, const pid p){
	//pre: !full()
	q.q[q.in]=p;
	q.in=(q.in+1)%qs;
	q.op=true;
}//enq

pid deq(queue &amp;q){
	//pre: !empty
	pid pro=q.q[q.out];
	q.q[q.out]=0;
	q.out=(q.out+1)%qs;
	q.op=false;
	return pro;
}//deq

bool empty(queue &amp;q){ return !q.op &amp;&amp; q.out == q.in; }

bool full(queue &amp;q){ return q.op &amp;&amp; q.out == q.in; }

pid getFirst(const queue q){ return q.q[q.out]; }

bool head(queue &amp;q,pid p){ return q.q[q.out] == p; }

bool possoEntrare(const int id){
    if( id &gt;= RESPONSABILI ){
        return stud_dentro &lt; MAX &amp;&amp; !resp_dentro &amp;&amp; id == getFirst(arrival);
    }else{
        return (stud_dentro == 0 || stud_dentro == MAX) &amp;&amp; id == getFirst(arrival);
    }
}</declaration>
